@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<PlayerCards.Languages.SharedResource> T
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
 <!-- keep language fixed so no auto RTL -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlayerCards</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlayerCards.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PlayerCards</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                    </ul>

                    @{
                        var userRole = Context.User.FindFirst(ClaimTypes.Role)?.Value;
                    }

                    <!-- Language switcher -->
                    <form asp-controller="Language" asp-action="SetLanguage" method="post" class="d-flex align-items-center me-3">
                        <select name="culture" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                            <option value="en" selected="@(CultureInfo.CurrentUICulture.Name.StartsWith("en") ? "selected" : null)">English</option>
                            <option value="ar" selected="@(CultureInfo.CurrentUICulture.Name.StartsWith("ar") ? "selected" : null)">العربية</option>
                        </select>
                        <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                    </form>

                    <ul class="navbar-nav">
                       
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            if (userRole == "SuperAdmin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="SuperAdmin" asp-action="Dashboard">@T["ManageUsers"]</a>
                                </li>
                            }
                            else if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">@T["My Dashboard"]</a>
                                </li>
                            }
                            else if (userRole == "User")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Dashboard">@T["My Dashboard"]</a>
                                </li>
                            }
                        }
                    </ul>

                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="color: black; text-align: center;">
        <div class="container">
            &copy; 2025 - PlayerCards
            @if (User.Identity.IsAuthenticated)
            {
                <text> - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: black;">@T["Privacy"]</a></text>
            }
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
