@model IEnumerable<PlayerCards.Models.PlayerCard>

<div class="container py-4">
    <!-- Page header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-danger" style="font-size:1.5rem;">
            <i class="fas fa-heart"></i> Most Liked Player Cards
        </h2>
        <p class="text-muted" style="font-size:0.9rem;">Discover the top-rated cards loved by players</p>
    </div>

    <!-- Cards grid -->
    <div class="row g-3">
        @foreach (var card in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden small-card">
                    <!-- Image -->
                    <div class="position-relative">
                        <img src="@card.ImagePath" class="card-img-top" alt="@card.Name" style="height:150px; object-fit:cover;" />
                        <span class="badge bg-danger position-absolute top-0 end-0 m-1 px-2 py-1" style="font-size:0.75rem;">
                            <i class="fas fa-heart"></i> @card.LikesCount
                        </span>
                    </div>

                    <!-- Body -->
                    <div class="card-body text-center d-flex flex-column p-2">
                        <h6 class="card-title fw-bold mb-1" style="font-size:0.9rem;">@card.Name</h6>
                        <p class="text-success fw-semibold mb-2" style="font-size:0.85rem;">$@card.Price</p>

                        <a asp-action="Details" asp-route-id="@card.Id" class="btn btn-sm btn-outline-danger mt-auto rounded-pill">
                            <i class="fas fa-eye"></i> View
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .small-card {
        max-width: 160px;
        font-size: 0.85rem;
    }

        .small-card img {
            height: 150px;
            object-fit: cover;
        }

        .small-card .btn {
            font-size: 0.75rem;
            padding: 3px 8px;
        }
</style>
